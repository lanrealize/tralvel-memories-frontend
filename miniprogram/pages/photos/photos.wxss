/* pages/photos/photos.wxss */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.tm-photos-loading {
  display: flex;
  flex-direction: column;
  flex: 1;
  align-items: center;
}

.tm-photos-loading-text {
  margin-left: auto;
  margin-right: auto;
  margin-top: 47vh;
  color: rgb(160, 160, 160);
  margin-bottom: 1vh;
}

.tm-photos-photo-creation {
  border-radius: 2vh;
  position: fixed;
  transition: top 0.8s cubic-bezier(.2, 1, 0, 1);
}
