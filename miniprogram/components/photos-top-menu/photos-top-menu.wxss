/* components/photos-top-menu/photos-top-menu.wxss */

/* content part */
.tm-photos-top-menu-root {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  width: 100vw;
  z-index: 3;
  position: fixed;
  left: 0;
}

.tm-photos-top-menu-sub-root {
  display: flex; 
  align-items: center; 
  margin-right: 5vw;
}

.tm-photos-top-menu-icon {
  width: 5vw;
  height: 5vw;
  position: absolute;
  padding-bottom: 0.5vw;
}

.tm-photos-top-menu-title {
  color: white; 
  font-size: 32rpx;
  font-weight: 600;
}

/* effect part */
.blur {
	-webkit-mask-image: linear-gradient(#000, #000, transparent);
	backdrop-filter: blur(8px);
  width: 100vw;
  overflow: visible;
  float: left;
}

.gradient {
  position: absolute;
  top: 0;
  width: 100vw;
  overflow: visible;
  float: left;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0.5) 0%, rgba(0, 0, 0, 0) 100%);
}

.blurred-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 2;
}
