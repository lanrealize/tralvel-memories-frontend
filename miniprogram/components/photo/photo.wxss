/* components/photo/photo.wxss */
.tm-photo-top-menu {
  height: 100vh;
  width: 100vw;
  opacity: 1;
  background: linear-gradient(180deg, rgba(255, 255, 255, 1) 0%, rgba(255, 255, 255, 0) 100%);
  /* background: rgba(255, 255, 255, 0.3); */
  backdrop-filter: blur(5px);
  position: absolute; 
  top: 0;
  z-index: 2;
}

.tm-photo-title {
  font-size: 48rpx;
  font-weight: 700;
  line-height: 32.93px;
  color: rgba(0, 0, 0, 1);
  margin-left: 5vw;
  margin-bottom: 6vh;
}

.tm-photo-title-container {
  margin-left: 3vw;
  margin-right: 3vw;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.tm-photo-main-title {
  font-size: 33rpx;
  font-weight: 600;
  line-height: 27.44px;
  color: black;
  display: inline-block;
}

.tm-photo-sub-title {
  font-size: 30rpx;
  font-weight: 400;
  line-height: 27.44px;
  color: black;
  display: inline-block;
  margin-left: 2vw;
}

.tm-photo-photo {
  width: 100vw;
  margin-top: 1.3vh;
  margin-bottom: 1.0vh;
}

.tm-photo-photo-vertical {
  height: 110vw;
}

.tm-photo-photo-horizontal {
  height: 70vw;
}

.tm-photo-description {
  font-size: 28rpx;
  font-weight: 400;
  line-height: 3vh;
  color: rgba(128, 128, 128, 1);
  margin-left: 3vw;
  margin-right: 3vw;
  margin-bottom: 4vh;
}