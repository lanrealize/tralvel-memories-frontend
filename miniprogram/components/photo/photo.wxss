.blur {
	-webkit-mask-image: linear-gradient(#000, #000, transparent);
	backdrop-filter: blur(8px);
  height: 50vh;
  width: 100vw;
  overflow: visible;
  float: left;
}
.outlined {
  height: 50vh;
  width: 50vw;
  position: fixed;
  border-top: 0;
  border-left: 0;
  z-index: 2;
}
.blurred-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1;
}