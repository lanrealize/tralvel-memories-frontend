/* components/albums/albums.wxss */
.tm-albums-root{
  position: absolute;
  height: 56vh;
  width: 100vw;
  display: flex;
  justify-content: center;
}

.tm-albums-swiper {
  height: 56vh;
  width: 100vw;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.tm-albums-album-title {
  position: absolute;
  top: 47vh;
  font-size: 24px;
  font-weight: 700;
  line-height: 30px;
  color: rgba(255, 255, 255, 1);
  z-index: 3;
  transition: opacity 0.2s ease-in-out;
}

.tm-albums-album-mask {
  position: absolute;
  height: 100%;
  width: 96vw;
  z-index: 4;
  border-radius: 2vw;
  background-color: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(5px);
  transition: opacity 0.3s ease-in-out;
  display: flex;
  justify-content: center;
  align-items: center;
}