/* components/photo-creation/photo-creation.wxss */
.photo-creation-root {
  height: 100vh;
  width: 100vw;
  background-color: rgb(255, 255, 255);
  position: absolute;
}

.photo-creation-title {
  padding-left: 5vw;
  font-size: 36rpx;
  display: flex;
  flex-direction: row;
}

.photo-creation-submit {
  background-color: #000000;
  border-radius: 3px;
  color: white;
  margin-right: 0;
  margin-left: auto;
  padding-right: 4vw;
  padding-left: 4vw;

  display: flex;
  flex-direction: row;
}

.photo-creation-cancel {
  border-radius: 3px;
}

.photo-creation-actions {
  padding-left: 8vw;
  padding-right: 6vw;
  display: flex;
  flex-direction: row;
  margin-top: 2vh;
}

.photo-creation-description {
  color: #A6A6A6;
  padding-left: 8vw;
  padding-right: 8vw;
  padding-top: 3vh;
  font-size: 36rpx;
}

.photo-creation-description-action {
  padding-left: 8vw;
  padding-right: 8vw;
  display: flex;
  flex-direction: row;
  padding-top: 2vh;
}

.photo-creation-description-action-item {
  width: 7.6vw;
  height: 7.6vw;
  padding-left: 3.8vw;
}

.photo-creation-image {
  padding-left: 6vw;
  padding-top: 3vh;
  height: 88vw;
  width: 88vw;
}

.photo-creation-time-picker {
  margin-top: 5vh;
}

.photo-creation-location {
  padding-top: 2.5vh;
  padding-left: 7.75vw;
  padding-right: 8vw;
  display: flex;
  align-items: center;
}

.photo-creation-location-icon {
  width: 6.5vw;
  height: 6.5vw;
}

.photo-creation-location-text {
  grid-area: location-text;
  margin-left: 6.95vw;
  color: #A6A6A6;
  padding-right: 20vw;
}

.photo-creation-copyright {
  padding-left: 8vw;
  padding-right: 25vw;
  padding-top: 4vh;
  font-size: 22rpx;
}

.photo-creation-bottom-submit {
  margin-left: 8vw;
  margin-right: 47vw;
  width: 45vw;
  height: 5vh;
  background-color: black;
  border-radius: 5px;

  position: relative;
  top: 7vh;

  display: flex;
}

.photo-creation-top-placeholder {
  position: absolute;
  top: 0;
  width: 100vw;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0.2) 0%, rgba(0, 0, 0, 0) 100%);
}